<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SmartLearningPlanner.MobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SmartLearningPlanner.MobileApp"    
    xmlns:pages="clr-namespace:SmartLearningPlanner.MobileApp.Views.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="SmartLearningPlanner.MobileApp">

    <TabBar>

        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            
            />
        <ShellContent
            Title="Roadmaps"
            ContentTemplate="{DataTemplate pages:RoadmapsPage}"
            
            />
        <ShellContent
             Title="RoadmapViewerPage"
             ContentTemplate="{DataTemplate pages:RoadmapViewerPage}"
     
            />
    </TabBar>
</Shell>

