<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartLearningPlanner.MobileApp.Views.Pages.RoadmapsPage"
             Title="RoadmapsPage">
    <VerticalStackLayout>
        <StackLayout>
            <Button Text="Создать новый Roadmap" Clicked="OnCreateRoadmapClicked"/>
            <ListView x:Name="RoadmapListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Title}" />
                                <Label Text="{Binding ShortDescription}" />
                                <Button Text="Открыть" Clicked="OnRoadmapClicked"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>